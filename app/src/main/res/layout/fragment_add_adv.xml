<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pic"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:text="@string/add_the_maid_photo"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:textSize="@dimen/_14ssp"
        app:fontFamily="casual"
        app:layout_constraintBottom_toTopOf="@+id/imgAdv"
        app:layout_constraintEnd_toStartOf="@+id/imgAdv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etAdvAge"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/my_et"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/spExperience" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="0dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/age"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toStartOf="@+id/etAdvAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t6" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/Wednesday"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t5" />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginTop="8dp"
        android:text="@string/Thursday"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintStart_toEndOf="@+id/checkBox4"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_25sdp"
