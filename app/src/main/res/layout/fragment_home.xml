<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recAllAdv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgfillter" />

    <ImageView
        android:id="@+id/imgfillter"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:src="@drawable/filter"
        app:layout_constraintBottom_toTopOf="@+id/recAllAdv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:text="Filter by Category"
        app:layout_constraintBottom_toTopOf="@+id/recAllAdv"
        app:layout_constraintEnd_toStartOf="@+id/imgfilter2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgfilter2"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/filter2"
        app:layout_constraintBottom_toTopOf="@+id/recAllAdv"
        app:layout_constraintEnd_toStartOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:text="Filter by publisher"
        app:layout_constraintBottom_toTopOf="@+id/recAllAdv"
        app:layout_constraintEnd_toStartOf="@+id/imgfillter"
        app:layout_constraintStart_toEndOf="@+id/imgfilter2"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>